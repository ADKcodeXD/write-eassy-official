---
import { Image } from "astro:assets";
import { markdownify } from "@/lib/utils/textConverter";

const { cta } = Astro.props;
---

<section class="px-4 section">
  <div class="container shadow section rounded-xl">
    <div class="items-center justify-center mx-auto row">
      <div class="flex flex-col items-center mt-5 text-center md:mt-0 md:text-left md:col-6 lg:col-5">
        <h2>{cta?.title}</h2>
        <p class="mt-6" set:html={markdownify(cta?.content)} />
        {
          cta.button.enable && (
            <a
              class="mt-4 btn btn-primary"
              href={cta.button.link}
              rel={cta.button.rel}
            >
              {cta.button.label}
            </a>
          )
        }
      </div>
    </div>
  </div>
</section>
